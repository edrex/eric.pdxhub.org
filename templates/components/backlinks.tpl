<ema:note:backlinks:nodaily>
  <div class="flex-1 p-4 mt-8 bg-gray-100 rounded">
    <header class="mb-2 text-l font-semibold text-gray-500">Pages linking here</header>
    <ul class="space-y-1">
      <backlink>
        <li>
          <a class="text-${theme}-600 font-bold hover:bg-${theme}-50" href="${backlink:note:url}">
            <backlink:note:title />
          </a>
          <backlink:note:contexts>
            <apply template="context" />
          </backlink:note:contexts>
        </li>
      </backlink>
    </ul>
  </div>
</ema:note:backlinks:nodaily>
