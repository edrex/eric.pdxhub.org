nav.top-bar(data-topbar)
  ul.title-area
    li.name
      h1
        a(href='/', title=site.description)
          mixin icon("coffee")= name
  section.top-bar-section
    ul.right
      li
        mixin pretty_link(public.articles._data.index, "articles/")
      li.has-dropdown
        a(href='#')
          mixin icon("th-large")  Sections
        ul.dropdown
          include sections
